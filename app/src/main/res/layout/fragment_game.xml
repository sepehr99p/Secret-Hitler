<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    tools:context=".ui.game.GameFragment">

    <TextView
        android:id="@+id/player_name_textView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:textSize="24sp"
        android:text="sep"
        android:textStyle="bold"/>

    <TextView
        android:id="@+id/player_role_textView"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="LIBERAL"
        android:layout_marginBottom="16dp"
        android:textColor="#02F7FF"
        android:gravity="center"
        android:paddingVertical="4dp"
        android:textSize="62sp" />

    <LinearLayout
        android:id="@+id/law_main_ll"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:orientation="horizontal"
        android:layout_gravity="center"
        android:visibility="gone"
        android:weightSum="3">

        <TextView
            android:id="@+id/law_1_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_blue"
            android:layout_marginLeft="8dp"
            android:layout_marginRight="4dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/law_2_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_red"
            android:layout_marginHorizontal="4dp"
            android:gravity="center"
            />

        <TextView
            android:id="@+id/law_3_tv"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:background="@drawable/bg_rectangle_blue"
            android:layout_marginLeft="4dp"
            android:layout_marginRight="8dp"
            android:gravity="center"
            />


    </LinearLayout>

    <Button
        android:id="@+id/watch_role_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="gone"
        android:text="Watch Role"/>

    <Button
        android:id="@+id/watch_law_btn"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:visibility="gone"
        android:layout_gravity="bottom"
        android:text="Watch Cards"/>


</FrameLayout>